---
const { title, description, link } = Astro.props;
---

<div
  class="max-w-sm h-52 rounded overflow-hidden shadow shadow-gray-700 my-4 relative"
>
  <div class="px-6 pt-4 pb-2">
    <h3 class="font-bold text-xl mb-2 truncate">{title}</h3>
  </div>
  <div class="px-6">
    <p
      class="text-gray-700 text-base overflow-hidden text-ellipsis"
      style="display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;"
    >
      {description}
    </p>
  </div>
  <div class="absolute bottom-0 left-0 px-6 py-4">
    <a href={link} target="_blank" class="text-indigo-500 hover:underline"
      >Read More</a
    >
  </div>
</div>
