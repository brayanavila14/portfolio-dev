---
const { title, description, link } = Astro.props;
---

<div class="max-w-xs h-52 rounded overflow-hidden shadow shadow-gray-700 my-4 mx-auto relative">
  <div class="px-6 pt-4 pb-2">
    <h3 class="font-bold text-xl mb-2 truncate">{title}</h3>
  </div>
  <div class="px-6">
    <p
      class="text-gray-700 text-base overflow-hidden text-ellipsis"
      style="display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;"
    >
      {description}
    </p>
  </div>
  <div class="absolute bottom-0 left-0 px-6 py-4">
    <a href={link} target="_blank" class="text-blue-400 text-opacity-50 hover:underline">Read More</a>
  </div>
</div>